<!DOCTYPE html>
<html lang="pt">
  <head>
    <%-include('partials/head/jogos.ejs')-%>
  </head>
  <body>
    <%-include('partials/navbar.ejs')-%>
    <main>
      <h1>Jogos</h1>
        <div class="container">
        <div class="row justify-content-center">
          <% for (var i in data) { %>
            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">
              <div class="card shadow" style="width: 18rem;">
                <div class="container-fluid justify-content-center">
                  <div class="inner">
                    <img src="<%=data[i]['img'][0]%>" class="card-img-top"/>
                  </div>
                  <div class="card-body">
                    <h5 class="card-title">
                        <%= data[i]["title"][0] %>
                    </h5>
                    <p class="card-text justify-content-center">
                      <%= data[i]["sinopse"][0] %>
                      <br>
                    </p>
                    <p class="cardplat">
                      <strong>Plataformas: </strong> <%= data[i]["platforms"][0] %>
                      <br>
                    </p>
                    <a href="#" class="btn btn-primary" id="btn" onclick="window.open('<%= data[i]["teaser"][0] %>')">Ver teaser</a>
                  </div>
                </div>
              </div>
            </div>
          <% } %>
        </div>
    </div>
    </main>
  </body>
</html>
